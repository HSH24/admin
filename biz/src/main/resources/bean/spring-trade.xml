<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="tradeAction" class="com.hsh24.admin.trade.action.TradeAction" parent="baseAction" scope="request">
		<property name="tradeService" ref="tradeService" />
	</bean>
	
	<bean id="tradeService" class="com.hsh24.admin.trade.service.impl.TradeServiceImpl">
		<property name="shopService" ref="shopService" />
		<property name="supplierService" ref="supplierService" />
		<property name="orderService" ref="orderService" />
		<property name="tradeDao" ref="tradeDao" />
	</bean>
	
	<bean id="tradeDao" class="com.hsh24.admin.trade.dao.impl.TradeDaoImpl" parent="baseDao" />
	
</beans>