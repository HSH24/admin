<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="weixinService" class="com.hsh24.admin.weixin.service.impl.WeixinServiceImpl">
		<property name="ticketService" ref="ticketService" />
		<property name="appId">
			<value>${weixin.app.id}</value>
		</property>
		<property name="appSecret">
			<value>${weixin.app.secret}</value>
		</property>
		<property name="corpId">
			<value>${weixin.corp.id}</value>
		</property>
		<property name="corpSecret">
			<value>${weixin.corp.secret}</value>
		</property>
	</bean>
	
	<bean id="tokenService" class="com.hsh24.admin.weixin.service.impl.TokenServiceImpl">
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="accessTokenService" ref="accessTokenService" />
	</bean>
	
	<bean id="ticketService" class="com.hsh24.admin.weixin.service.impl.TicketServiceImpl">
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="tokenService" ref="tokenService" />
		<property name="jsapiTicketService" ref="jsapiTicketService" />
	</bean>
	
	<!-- weixin -->
	<bean id="accessTokenService" class="com.hsh24.weixin.auth.service.impl.AccessTokenServiceImpl"></bean>
	<bean id="agentService" class="com.hsh24.weixin.agent.service.impl.AgentServiceImpl"></bean>
	<bean id="callbackService" class="com.hsh24.weixin.callback.service.impl.CallbackServiceImpl"></bean>
	<bean id="departmentService" class="com.hsh24.weixin.department.service.impl.DepartmentServiceImpl"></bean>
	<bean id="jsapiTicketService" class="com.hsh24.weixin.auth.service.impl.JSAPITicketServiceImpl"></bean>
	<bean id="materialService" class="com.hsh24.weixin.material.service.impl.MaterialServiceImpl"></bean>
	<bean id="menuService" class="com.hsh24.weixin.menu.service.impl.MenuServiceImpl"></bean>
	<bean id="messageService" class="com.hsh24.weixin.message.service.impl.MessageServiceImpl"></bean>
	<bean id="oauth2Service" class="com.hsh24.weixin.auth.service.impl.OAuth2ServiceImpl"></bean>
	<bean id="refundService" class="com.hsh24.weixin.pay.service.impl.RefundServiceImpl"></bean>
	<bean id="tagService" class="com.hsh24.weixin.tag.service.impl.TagServiceImpl"></bean>
	<bean id="unifiedOrderService" class="com.hsh24.weixin.pay.service.impl.UnifiedOrderServiceImpl"></bean>
	<bean id="userService" class="com.hsh24.weixin.user.service.impl.UserServiceImpl"></bean>
	
</beans>